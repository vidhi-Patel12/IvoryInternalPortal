@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ivory Technolab</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 260px;
            background: #363195;
            color: #fff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            transition: width 0.3s ease;
            z-index: 1000;
        }

        /* ===== HEADER ===== */
        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .logo-area {
            display: flex;
            align-items: center;
            gap: 10px;
            white-space: nowrap;
            font-weight: 700;
        }

        .logo-img {
            height: 34px;
        }

        .menu-text {
            white-space: nowrap;
        }

        /* Desktop hamburger (hidden by default) */
        .desktop-toggle {
            display: none;
            background: none;
            border: none;
            color: #fff;
            font-size: 22px;
            cursor: pointer;
        }

        /* Close button */
        .close-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 20px;
            cursor: pointer;
        }

        /* ===== MENU ===== */
        .sidebar a {
            color: #e0e7ff;
            text-decoration: none;
            padding: 12px 15px;
            border-radius: 12px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .sidebar a.active {
                background: rgba(255,255,255,0.25);
            }

        .sidebar .logout {
            margin-top: auto;
        }

        /* ===== COLLAPSED ===== */
        .sidebar.collapsed {
            width: 80px;
            padding: 20px 10px;
        }

            .sidebar.collapsed .menu-text,
            .sidebar.collapsed .close-btn {
                display: none !important;
            }

            .sidebar.collapsed .desktop-toggle {
                display: block;
                margin: 0 auto 20px;
            }

            .sidebar.collapsed a {
                justify-content: center;
                padding: 14px 0;
            }

            .sidebar.collapsed .logo-area {
                justify-content: center;
            }

        /* ===== MAIN ===== */
        .main-content {
            margin-left: 260px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

            .main-content.collapsed {
                margin-left: 80px;
            }

        /* ===== MOBILE ===== */
        .mobile-header {
            display: none;
            background: #363195;
            color: #fff;
            padding: 15px;
            align-items: center;
            justify-content: space-between;
        }

            .mobile-header button {
                background: none;
                border: none;
                color: #fff;
                font-size: 22px;
            }

        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
            width: 260px;
        }

        .main-content,
        .main-content.collapsed {
            margin-left: 0;
        }

        .mobile-header {
            display: flex;
        }

        .desktop-toggle {
            display: none !important;
        }

        }
    </style>
</head>

<body>

    <!-- MOBILE HEADER -->
    <div class="mobile-header">
        <button onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        <span>Ivory Technolab</span>
    </div>

    <!-- SIDEBAR -->
    <div class="sidebar" id="sidebar">

        <!-- HEADER -->
        <div class="sidebar-header">
            <button class="desktop-toggle" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>

            <div class="logo-area">
                <img src="~/images/Logo2_White.png" class="logo-img">
                <span class="menu-text">Ivory Technolab</span>
            </div>

            <button class="close-btn" onclick="toggleSidebar()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <!-- MENU -->
        <a href="/Admin/Index" class="@(controller == "Admin" && action == "Index" ? "active" : "")">
            <i class="bi bi-people"></i>
            <span class="menu-text">Employees</span>
        </a>

        <a href="/Admin/Vendor" class="@(controller == "Admin" && action == "Vendor" ? "active" : "")">
            <i class="bi bi-shop"></i>
            <span class="menu-text">Vendors</span>
        </a>

        <a href="/Admin/Profile" class="@(controller == "Admin" && action == "Profile" ? "active" : "")">
            <i class="bi bi-person"></i>
            <span class="menu-text">Profile</span>
        </a>

        <a href="/Home/Logout" class="logout">
            <i class="bi bi-box-arrow-right"></i>
            <span class="menu-text">Logout</span>
        </a>

    </div>

    <!-- MAIN -->
    <div class="main-content" id="mainContent">
        @RenderBody()
    </div>

    <!-- JS -->
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const main = document.getElementById("mainContent");

            if (window.innerWidth <= 768) {
                sidebar.classList.toggle("show");
            } else {
                sidebar.classList.toggle("collapsed");
                main.classList.toggle("collapsed");
            }
        }
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
