<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
<script>
    var canvas = document.getElementById('signature-pad');
    var ivoryPad = new SignaturePad(document.getElementById('ivory-signature'));

    var signaturePad = new SignaturePad(canvas);

    function saveSignature() {
        if (!ivoryPad.isEmpty()) {
            document.getElementById("IvorySignatureBase64").value =
                ivoryPad.toDataURL("image/png");
        }

        if (!signaturePad.isEmpty()) {
            document.getElementById("SignatureBase64").value =
                signaturePad.toDataURL("image/png");
        }
    }

      function clearIvorySignature() {
        ivoryPad.clear();
        document.getElementById("IvorySignatureBase64").value = "";
    }

    function clearSignature() {
        signaturePad.clear();
        document.getElementById("SignatureBase64").value = "";
    }
</script>
