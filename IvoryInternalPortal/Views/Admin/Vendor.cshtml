@{
    Layout = "~/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Vendor Management</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">

    <style>
        .action-btn {
            width: 30px;
            height: 30px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 3px;
        }

        .action-btn i {
            font-size: 16px;
        }

        .vendor-card {
            position: relative;
            padding: 22px;
            padding-right: 90px; /* space for action icons */
            border-radius: 18px;
            background: #fff;
            border: 1px solid #eee;
        }



        /* .vendor-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: #e0e7ff;
            color: #4338ca;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        } */

        .vendor-actions {
            position: absolute;
            top: 18px;
            right: 18px;
            display: flex;
            gap: 12px;
        }


        .badge-active {
            background: #dcfce7;
            color: #166534;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
        }

        .vendor-actions i {
            font-size: 18px;
            cursor: pointer;
            transition: transform 0.15s ease, opacity 0.15s;
        }

        .vendor-actions i:hover {
            transform: scale(1.15);
            opacity: 0.85;
        }

        .vendor-header {
            display: flex;
            gap: 14px;
            align-items: center;
        }


    </style>

</head>

<body>

    <div class="container mt-4">

        @* <div class="d-flex justify-content-between mb-3">
            <h3>Vendors</h3>
            <button class="btn btn-success" onclick="openCreateModal()">
                Add Vendor
            </button>


        </div> *@

        <!-- EMPLOYEE TABLE -->

        <div class="container mt-4">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h3 class="fw-bold">Vendors</h3>                   
                </div>

                <button class="btn btn-dark" style="background-color:#363195; border-color:#363195;" onclick="openCreateModal()">
                    <i class="bi bi-plus-lg"></i> Add Vendor
                </button>
            </div>

            <!-- SEARCH -->
            <div class="mb-4">
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light border-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text"
                           id="searchInput"
                           class="form-control bg-light border-0"
                           placeholder="Search by company, email, phone, GST">
                </div>
            </div>

            <!-- CARD GRID -->
            <div class="row g-4" id="vendorCardContainer"></div>

            <!-- PAGINATION -->
            <div class="d-flex justify-content-between align-items-center mt-4">

                <div>
                    Show
                    <select id="pageSize" class="form-select d-inline-block w-auto mx-1">
                        <option value="5" selected>5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                    </select>
                    entries
                </div>

                <div>
                    <button class="btn btn-outline-secondary btn-sm me-2"
                            id="prevBtn">
                        Prev
                    </button>

                    <span id="pageInfo"></span>

                    <button class="btn btn-outline-secondary btn-sm ms-2"
                            id="nextBtn">
                        Next
                    </button>
                </div>

            </div>

        </div>


        @* <table id="vendorTable" class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Company Name</th>
                    <th>Company Email</th>
                    <th>Phone</th>
                    <th>POC(Point Of Contact Perdson)</th>
                    <th width="120">Action</th>
                </tr>
            </thead>
            <tbody id="vendorTableBody"></tbody>
        </table> *@
    </div>

    <!-- Vendor Modal -->
    <div class="modal fade" id="vendorModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="vendorForm" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Add Vendor</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <!-- Hidden ID -->
                        <input type="hidden" name="VendorId" id="VendorId" />

                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label>Company Name</label>
                                <input type="text" class="form-control" name="CompanyName" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Company Address</label>
                                <textarea type="text" class="form-control" name="CompanyAddress" required></textarea>
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Company Email</label>
                                <input type="email" class="form-control" name="CompanyEmail" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Company Phone</label>
                                <input type="number" class="form-control" name="CompanyPhone" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>POC (Point Of Contact Person)</label>
                                <input type="number" class="form-control" name="PocPhone" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Gst Number</label>
                                <input type="text" class="form-control" name="GstNumber" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Roc Number</label>
                                <input type="text" class="form-control" name="RocNumber" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Uan Number</label>
                                <input type="text" class="form-control" name="UanNumber" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Bank Name</label>
                                <input type="text" class="form-control" name="BankName" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Account Number</label>
                                <input type="text" class="form-control" name="AccountNumber" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>IFSC Code</label>
                                <input type="text" class="form-control" name="IFSCCode" required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Account Holder Name</label>
                                <input type="text" class="form-control" name="AccountHolderName" required />
                            </div>

                            @* <div class="col-md-6 mb-2">
                                <label>Agreement PDF</label>
                                <input type="file" class="form-control" name="agreementFile" required />
                            </div>*@

                            <div class="col-md-6 mb-2">
                                <label>Agreement PDF</label>

                                <!-- Fake display (existing + new file) -->
                                <div id="agreementFileDisplay"
                                     class="border rounded px-3 py-2 mb-1 bg-light text-dark">
                                    No file chosen
                                </div>

                                <!-- Real file input -->
                                <input type="file"
                                       class="form-control"
                                       name="agreementFile"
                                       id="agreementFileInput"
                                       onchange="onAgreementFileChange(this)">
                            </div>

                            <div class="col-md-6 mb-2">
                                <label>Upload Signature (Image/PDF)</label>

                                <div id="signatureFileDisplay"
                                     class="border rounded px-3 py-2 mb-1 bg-light text-dark">
                                    No file chosen
                                </div>

                                <input type="file"
                                       class="form-control"
                                       name="signatureFile"
                                       accept="image/*,.pdf"
                                       id="signatureFileInput"
                                       onchange="onSignatureFileChange(this)">
                            </div>

                            <div class="col-6 mb-2">
                                <label>OR Draw Digital Signature</label><br />

                                <canvas id="signaturePad"
                                        width="500"
                                        height="200"
                                        style="border:1px solid #ccc; width:100%;">
                                </canvas>
                                <br />
                                <button type="button"
                                        class="btn btn-sm btn-secondary mt-2"
                                        onclick="clearPad()">
                                    Clear
                                </button>

                                <input type="hidden" name="SignatureData" id="signatureData">
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this vendor?
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="deleteVendorId" />
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- VIEW EMPLOYEE MODAL -->
    <div class="modal fade" id="viewVendorModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Vendor Details</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <table class="table table-bordered">
                        <tbody id="viewVendorBody"></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script src="/js/vendor.js"></script>

</body>

</html>