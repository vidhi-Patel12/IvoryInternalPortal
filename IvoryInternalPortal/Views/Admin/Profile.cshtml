@{
    Layout = "~/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>Profile Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">

    <style>
        .action-btn {
            width: 30px;
            height: 30px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 3px;
        }

            .action-btn i {
                font-size: 16px;
            }

        .profile-card {
            border: 1px solid #eee;
            border-radius: 14px;
            padding: 20px;
            background: #fff;
            position: relative;
            transition: 0.2s;
        }

            .profile-card:hover {
                box-shadow: 0 10px 25px rgba(0,0,0,.08);
            }

        .profile-actions {
            position: absolute;
            top: 15px;
            right: 15px;
        }

            .profile-actions i {
                cursor: pointer;
                margin-left: 8px;
                font-size: 18px;
            }

        .profile-name {
            font-weight: 600;
            font-size: 18px;
        }

        .profile-skills {
            font-size: 14px;
            color: #6c757d;
            display: -webkit-box;
            -webkit-line-clamp: 3; /* number of lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 1.4;
            max-height: calc(1.4em * 3);
            cursor: pointer;
        }

    </style>
</head>

<body>

    <div class="container mt-4">

        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold">Profiles</h3>
            </div>

            <button class="btn btn-dark" style="background-color:#363195; border-color:#363195;" onclick="openCreateModal()">
                <i class="bi bi-plus-lg"></i> Add Profile
            </button>
        </div>

        <!-- SEARCH -->
        <div class="mb-4">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-light border-0">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text"
                       class="form-control  bg-light border-0"
                       id="searchInput"
                       placeholder="Search profiles..."
                       onkeyup="applySearch()" />
            </div>
        </div>

        <!-- PROFILE GRID -->
        <div class="row g-4" id="profileGrid">
            <!-- Cards rendered by JS -->
        </div>

        <!-- PAGINATION -->
        <div class="d-flex justify-content-between align-items-center mt-4">

            <div>
                Show
                <select id="pageSize" class="form-select d-inline-block w-auto mx-1">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
                entries
            </div>

            <div>
                <button class="btn btn-outline-secondary btn-sm me-2"
                        id="prevBtn">
                    Prev
                </button>

                <span id="pageInfo"></span>

                <button class="btn btn-outline-secondary btn-sm ms-2"
                        id="nextBtn">
                    Next
                </button>
            </div>

        </div>

    </div>

    <!-- PROFILE MODAL -->
    <div class="modal fade" id="profileModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <form id="profileForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Add Profile</h5>
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">

                        <input type="hidden" id="ProfileId" name="ProfileId" />

                        <div class="mb-2">
                            <label>Name</label>
                            <input class="form-control" name="Name" required />
                        </div>

                        <div class="mb-2">
                            <label>Professional Summary</label>
                            <textarea class="form-control" name="ProfessionalSummary"></textarea>
                        </div>

                        <div class="mb-2">
                            <label>Core Skills</label>
                            <textarea class="form-control" name="CoreSkills"></textarea>
                        </div>

                        <div class="mb-2">
                            <label>Professional Experience</label>
                            <textarea class="form-control" name="ProfessionalExperience"></textarea>
                        </div>

                        <!-- PROJECTS -->
                        <div class="mb-2">
                            <label class="fw-bold">Projects (Max 8)</label>

                            <div id="projectsContainer"></div>

                            <button type="button"
                                    class="btn btn-sm btn-outline-primary mt-2"
                                    onclick="addProject()">
                                + Add Project
                            </button>
                        </div>

                        <div class="mb-2">
                            <label>Key Skills</label>
                            <textarea class="form-control" name="KeySkills"></textarea>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <!-- DELETE MODAL -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    Are you sure you want to delete this profile?
                    <input type="hidden" id="deleteProfileId" />
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                </div>

            </div>
        </div>
    </div>

    <!-- VIEW PROFILE MODAL -->
    <div class="modal fade" id="viewProfileModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">Profile Details</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <table class="table table-bordered">
                        <tbody id="viewProfileBody"></tbody>
                    </table>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                </div>

            </div>
        </div>
    </div>


    <!-- PDF PREVIEW MODAL -->
    <div class="modal fade" id="pdfPreviewModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Profile PDF Preview</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body" style="height:80vh">
                    <iframe id="pdfFrame" style="width:100%;height:100%;border:none"></iframe>
                </div>

            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script src="/js/profile.js"></script>

</body>
</html>
